<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:background="@drawable/pop_window_radius"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pop_window_title_radius">

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/pop_window_title_radius_left"/>

        <TextView
            android:id="@+id/txt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="关闭"
            android:textColor="#393A3C"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:textColor="#999999"
            android:textSize="15sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm"
        android:layout_below="@+id/rel_title"
        android:background="#FFFFFF"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_admin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="管理员"
            android:textColor="#999999"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/edt_admin"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/txt_username"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_admin"
            android:gravity="center"
            android:text="员工账号"
            android:textColor="#999999"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_admin"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/txt_username"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textSize="17sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="216dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_20dip_bg"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        />
</RelativeLayout>